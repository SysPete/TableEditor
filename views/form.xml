<specification>

	<list name="crumb" iterator="bread_crumbs" >
		<param name="label" class="link" />
		<param name="link" target="href" />
	</list>

	<value name="class" />
	<value name="form" field="form_action" target="action" />
	<value name="title" />
	
	<list name="error" iterator="errors" >
		<param name="label" class="error-label" />
	</list>
	
	<list name="sub-menu-item" iterator="sub_menu" >
		<param name="label" class="sub-menu-item" />
		<param name="link" target="href" class="sub-menu-link" />
	</list>

	<container name="pk" value="pk" >
		<value name="pk" target="value" />
	</container>

	<list name="form-field" iterator="fields">	
		<param name="label" class="control-label" />
		<param name="name" class="input" target="name" />
		<param name="value" class="input-textfield" target="value" />
		<param name="size" class="input-textfield" target="maxlength" />
		<param name="readonly" class="input" target="readonly" />
		<param name="required" class="input" target="required" filter="boolean" />
		<param name="value_textarea" class="input-textarea" field="value" />
		<param name="value_checkbox" class="input-checkbox" target="checked" filter="boolean" field="value" />
		<list name="option" iterator="options">
			<param name="option-value" field="value" class="option" target="value" />
			<param name="option-label" field="option_label" class="option" />
			<param name="value_dropdown" class="input-dropdown" target="selected" filter="boolean" field="selected" />
		</list>
		<container name="default" value="!varchar !numeric" ></container>
		<container name="dropdown" value="dropdown" ></container>
		<container name="checkbox" value="checkbox" ></container>
		<container name="text_field" value="text_field" ></container>
		<container name="text_area" value="text_area"></container>
	</list>

</specification>
